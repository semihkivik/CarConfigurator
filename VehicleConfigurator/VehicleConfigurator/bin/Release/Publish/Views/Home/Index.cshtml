@model List<Cars>
    @{
        ViewBag.Title = "Index";
    }
 
 
    <!------ Include the above in your HEAD tag ---------->


    <section class="our-webcoderskull padding-lg">
        <div class="container">
            <div class="row heading heading-icon">
                <h2>Araç Konfigüratorü</h2>
            </div>
            <ul class="row">
                @foreach (var item in Model)
                {
                    <li class="col-12 col-md-6 col-lg-4">
                        <div class="cnt-block equal-hight" style="height: 349px;">
                            <figure><img src="~/Content/Image/@item.CarImagePath" class="img-responsive" alt=""></figure>
                            <h3>@item.CarName</h3>
                            <p>@item.CarModel</p>
                            <ul class="follow-us clearfix">
                                <li>@Html.ActionLink("Oluştur Ve Fiyat Al","ChoosePacked","Home",new {@carId=item.CarsId},new {@class="btn btn-success" })</li>
                                <li><a href="~/Content/Pdf/Teknik-Brosur.pdf" class="btn btn-info">Keşfet</a></li>

                            </ul>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </section>

