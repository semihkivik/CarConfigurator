
@{
    ViewBag.Title = "Yeni Araç Oluştur";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
    <h1>Yeni Araç Oluştur</h1>
@using (Html.BeginForm("CreateCar", "Admin", FormMethod.Post,new {@enctype="multipart/form-data" }))
{
    <div class="form-group">
        <div class="form-group">
            <label>Araç Adı:</label>
            <input type="text" class="form-control" name="carName" />
        </div>

        <div class="form-group">
            <label>Araç Modeli:</label>
            <input type="number" class="form-control" min="2000"  max="@DateTime.Now.Year" name="carModel" />
        </div>
        <div class="form-group">
            <label>Araç Fiyatı:</label>
            <input type="number" class="form-control"   name="carPrice" />
        </div>
        <div class="form-group">
            <label>Resim:</label>
            <input type="file" class="form-control" name="carFile" />
        </div>
        <label class="bg-warning">@ViewBag.result</label>
    </div>
    <input type="submit" value="Kaydet" class="btn btn-info" />
}

